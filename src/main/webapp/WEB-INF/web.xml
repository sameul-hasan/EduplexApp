<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.diu.eduplex.controllers.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MovieController</servlet-name>
        <servlet-class>com.diu.eduplex.controllers.MovieController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MovieController</servlet-name>
        <url-pattern>/movies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PaymentController</servlet-name>
        <servlet-class>com.diu.eduplex.controllers.PaymentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentController</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>
</web-app>